<article class="post-card {{#is "home"}}{{#has index="0"}}post-card-large{{/has}}{{/is}}">
  {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img class="post-card-image"
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 400px, 700px"
            src="{{img_url feature_image size="m"}}"
            alt="{{title}}"
        />
    </a>
  {{/if}}

  <div class="post-card-content">
    <a class="post-card-content-link" href="{{url}}">
      <header class="post-card-header">
        <div class="post-card-tags">
          <div class="post-card-time">
            <span class="post-card-byline-date">
              <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
            </span>
            {{#has index="0"}}
            <div class="post-card-latest-tag"><i class="fas fa-star"></i> New Post</div>
            {{/has}}
          </div>
          {{#if primary_tag}}
            {{#primary_tag}}
            <a class="category-tag post-card-primary-tag" href={{url}}>{{name}}</a>
            {{/primary_tag}}
          {{/if}}
        </div>
        <a href="{{url}}"><h3 class="post-card-title">{{title}}</h3></a>
      </header>
    </a>
    <a href="{{url}}">
      <section class="post-card-excerpt">
        {{#if feature_image}}
          <p>{{excerpt words="30"}}</p>
        {{else}}
          <p>{{excerpt words="44"}}</p>
        {{/if}}
        <a class="post-card-excerpt-read-more-link" href={{url}}>
          Continue Reading <i class="fa fa-angle-right"></i>
        </a>
      </section>
    </a>
  </div>
</article>
